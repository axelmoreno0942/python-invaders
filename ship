import pygame as pg
#dans code princiapl mettre:
#ship = Ship(SCREEN_WIDTH, SCREEN_HEIGHT)
#ship_group = pg.sprite.GroupeSingle()
#ship_group.add(ship)

class Ship(pg.sprite.Sprite):
    def _init_(self, screen_width, screen_height):
        super().__init__()
        self.screen_width = screen_width
        self.screen_height = screen_height
        self.image = pg.image.load('Assets/spritesheets/shipOP.png')
        self.rect = self.image.get_rect(midbottom = (self.screen_width/2, self.screen_height))
        self.speed = 6

    def get_user_input(self):
        keys = pg.key.get_pressed()

        if keys[pg.K_RIGHT]:
            self.rect.x += self.speed

        if keys[pg.K_LEFT]:
            self.rect.x -= self.speed

    def update(self):
        self.get_user_input()
        self.constrain_movement()

    def constrain_movement(self):
        if self.rect.right > self.screen_width:
            self.rect.right = self.screen_width
        if self.rect.left < 0:
            self.rect.left = 0

